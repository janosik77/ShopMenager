<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopMenager.Views.PorductV.productDetailView">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="15">

                <Label Text="Details"
                       FontSize="Large"
                       HorizontalOptions="Center" />

                <StackLayout Spacing="10">

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Product ID:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding ProductID}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Category ID:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding CategoryID}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Name:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding ProductName}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Price:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding Price}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Stock:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding Stock}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Description:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding Description}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Photo Path:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding PhotoPath}" />
                    </StackLayout>
                </StackLayout>

                <Button Text="Edit"
                        Command="{Binding EditCommand}"
                        CommandParameter="{Binding ProductID}" />
                <Button Text="Delete"
                        Command="{Binding DeleteCommand}"
                        CommandParameter="{Binding ProductID}" />
                <Button Text="Back to List"
                        Command="{Binding BackCommand}" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>