<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ShopMenager.Views.PorductV.AddProductView"
    BackgroundColor="{StaticResource Primary}"
    Title="{Binding Title}">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollView Grid.Row="0">
                <StackLayout Padding="20" Spacing="15">
                    <StackLayout Spacing="10" Margin="0,15">

                        <Label Text="Kategoria" 
                                Style="{StaticResource DetailLabel}" />
                        <Frame Style="{StaticResource SearchFrame}">
                            <Picker Title="Select Category"                                    
                                    ItemsSource="{Binding Categories}"
                                    SelectedItem="{Binding SelectedCategory}"
                                    Style="{StaticResource PickerStyle}" />
                        </Frame>

                        <Label Text="Product Name" 
                               Style="{StaticResource DetailLabel}" />
                        <Frame Style="{StaticResource SearchFrame}">
                            <Entry Placeholder="Enter product name"
                                   Text="{Binding ProductName}"
                                   Style="{StaticResource SearchEntryStyle}" />
                        </Frame>

                        <Label Text="Price" 
                               Style="{StaticResource DetailLabel}" />
                        <Frame Style="{StaticResource SearchFrame}">
                            <Entry Placeholder="Enter price"
                                   Keyboard="Numeric"
                                   Text="{Binding Price}"
                                   Style="{StaticResource SearchEntryStyle}" />
                        </Frame>

                        <Label Text="Stock" 
                               Style="{StaticResource DetailLabel}" />
                        <Frame Style="{StaticResource SearchFrame}">
                            <Entry Placeholder="Enter stock quantity"
                                   Keyboard="Numeric"
                                   Text="{Binding Stock}"
                                   Style="{StaticResource SearchEntryStyle}" />
                        </Frame>

                        <Label Text="Description" 
                               Style="{StaticResource DetailLabel}" />
                        <Frame Style="{StaticResource SearchFrame}">
                            <Editor Placeholder="Enter product description"
                                    Text="{Binding Description}"
                                    AutoSize="TextChanges"
                                    HeightRequest="100"
                                    Style="{StaticResource SearchEntryStyle}" />
                        </Frame>

                        <Label Text="Photo Path" 
                               Style="{StaticResource DetailLabel}" />
                        <Frame Style="{StaticResource SearchFrame}">
                            <Entry Placeholder="Enter photo path"
                                   Text="{Binding PhotoPath}"
                                   Style="{StaticResource SearchEntryStyle}" />
                        </Frame>
                    </StackLayout>
                </StackLayout>
            </ScrollView>

            <StackLayout Grid.Row="1" Padding="20" Spacing="15">
                <Button Text="Create"
                        Command="{Binding SaveCommand}" />
                <Button Text="Back to List"
                        Command="{Binding CancelCommand}" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
