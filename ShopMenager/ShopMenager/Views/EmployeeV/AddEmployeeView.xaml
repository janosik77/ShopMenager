<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopMenager.Views.EmployeeV.AddEmployeeView"
             >
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="15">


                <Label Text="Create Employee"
                       FontSize="Large"
                       HorizontalOptions="Center" />

                <StackLayout Spacing="10">

                    <Label Text="First Name" />
                    <Entry Placeholder="Enter first name"
                           Text="{Binding FirstName}" />

                    <Label Text="Last Name" />
                    <Entry Placeholder="Enter last name"
                           Text="{Binding LastName}" />

                    <Label Text="Email" />
                    <Entry Placeholder="Enter email"
                           Keyboard="Email"
                           Text="{Binding Email}" />

                    <Label Text="Phone" />
                    <Entry Placeholder="Enter phone number"
                           Keyboard="Telephone"
                           Text="{Binding Phone}" />

                    <Label Text="Hire Date" />
                    <DatePicker Date="{Binding HireDate}" />

                    <Label Text="Salary" />
                    <Entry Placeholder="Enter salary"
                           Keyboard="Numeric"
                           Text="{Binding Salary}" />
                    
                    <Label Text="Photo Path" />
                    <Entry Placeholder="Enter photo path"
                           Text="{Binding PhotoPath}" />

                    <Button Text="Create"
                            Command="{Binding SaveCommand}" />
                </StackLayout>

                <Button Text="Back to List"
                        Command="{Binding CancelCommand}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>