<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ShopMenager.Views.EmployeeV.EditEmployeeView"
    BackgroundColor="{StaticResource Primary}"
    Title="{Binding Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <StackLayout Padding="20" Spacing="15">
                <StackLayout Spacing="10" Margin="0,15">
                    <Label Text="First Name:" Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry Placeholder="Enter first name"
                               Text="{Binding FirstName, Mode=TwoWay}"
                               Style="{StaticResource SearchEntryStyle}" />
                    </Frame>

                    <Label Text="Last Name:" Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry Placeholder="Enter last name"
                               Text="{Binding LastName, Mode=TwoWay}"
                               Style="{StaticResource SearchEntryStyle}" />
                    </Frame>

                    <Label Text="Email:" Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry Placeholder="Enter email"
                               Keyboard="Email"
                               Text="{Binding Email, Mode=TwoWay}"
                               Style="{StaticResource SearchEntryStyle}" />
                    </Frame>

                    <Label Text="Phone:" Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry 
                        Placeholder="Enter phone"
                        Keyboard="Telephone"
                        Text="{Binding Phone, Mode=TwoWay}"
                        Style="{StaticResource SearchEntryStyle}" />
                    </Frame>

                    <Label Text="Hire Date:" Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <DatePicker 
                        Date="{Binding HireDate, Mode=TwoWay}"
                        HorizontalOptions="FillAndExpand" />
                    </Frame>

                    <Label Text="Salary:" Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry 
                        Placeholder="Enter salary"
                        Keyboard="Numeric"
                        Text="{Binding Salary, Mode=TwoWay}"
                        Style="{StaticResource SearchEntryStyle}" />
                    </Frame>

                    <Label Text="Photo Path:" Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry 
                        Placeholder="Enter photo path"
                        Text="{Binding PhotoPath, Mode=TwoWay}"
                        Style="{StaticResource SearchEntryStyle}" />
                    </Frame>
                </StackLayout>
            </StackLayout>
        </ScrollView>

        <StackLayout Grid.Row="1" Padding="20" Spacing="10" Orientation="Vertical">
            <Button Text="Save" Command="{Binding SaveCommand}"/>
            <Button Text="Back to List" Command="{Binding CancelCommand}"/>
        </StackLayout>
    </Grid>
</ContentPage>
