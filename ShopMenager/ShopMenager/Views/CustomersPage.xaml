<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="ShopMenager.Views.CustomersPage"
                xmlns:views="clr-namespace:ShopMenager.Views"
                xmlns:vm="clr-namespace:ShopMenager.ViewModels"
                x:TypeArguments="vm:CustomersPageViewModel"
                Title="{Binding Title}"
                >
    
    <StackLayout Padding="15"  Spacing="15">

        <!-- Search Bar -->
        <Grid ColumnSpacing="5" VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Frame Grid.Column="0"
                   CornerRadius="10"
                   Padding="0"
                   BackgroundColor="White"
                   HeightRequest="45"
                   VerticalOptions="Center"
                   HasShadow="False">
                <Entry x:Name="SearchEntry"
                       Placeholder="Search for customer"
                       BackgroundColor="Transparent"
                       Margin="15,0"
                       VerticalOptions="Center"
                       FontSize="14"/>
            </Frame>

            <Button Grid.Column="1"
                    Text="🔍"
                    BackgroundColor="Transparent"
                    WidthRequest="45"
                    HeightRequest="45"
                    FontSize="18"
                    HorizontalOptions="End"
                    VerticalOptions="Center" />
        </Grid>
    
        <!-- Customers List -->
        <CollectionView x:Name="CustomersList" ItemsSource="{Binding Customers}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="10"
                   Margin="0,5"
                   HasShadow="True">
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Customer Image -->
                            <Image Source="{Binding PhotoPath}"
                           WidthRequest="60"
                           HeightRequest="60"
                           Aspect="AspectFill"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"
                           Grid.Column="0"
                           BackgroundColor="#E0E0E0"
                           />

                            <!-- Customer Info -->
                            <StackLayout Grid.Column="1" VerticalOptions="Center">
                                <Label Text="{Binding FirstName}"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="#333" />
                                <Label Text="{Binding Phone}"
                               FontSize="13"
                               TextColor="#777" />
                                <Label Text="{Binding Email}"
                               FontSize="12"
                               TextColor="#777" />
                            </StackLayout>

                            <!-- Edit/Delete Buttons -->
                            <StackLayout Grid.Column="2" VerticalOptions="Center" Spacing="10">
                                <Button Text="✏️"
                                        BackgroundColor="#4CAF50"
                                        WidthRequest="35"
                                        HeightRequest="35"
                                        CornerRadius="10"
                                        FontSize="14"
                                        TextColor="White" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CustomersPageViewModel}}, Path=UpdateItemCommand}"
                                        CommandParameter="{Binding .}"
                                        />

                                <Button Text="🗑️"
                                        BackgroundColor="#F44336"
                                        WidthRequest="35"
                                        HeightRequest="35"
                                        CornerRadius="10"
                                        FontSize="14"
                                        TextColor="White" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CustomersPageViewModel}}, Path=DeleteItemCommand}"
                                        CommandParameter="{Binding .}"/>
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Add Customer Button -->
        <Button Text="＋ Add Customer"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                FontSize="16"
                HeightRequest="50"
                VerticalOptions="End" 
                Command="{Binding AddCommand}"/>

    </StackLayout>

</views:BasePage>