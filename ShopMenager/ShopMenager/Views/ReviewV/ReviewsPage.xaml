<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopMenager.ViewModels.ReviewsVM"
             x:Class="ShopMenager.Views.ReviewV.ReviewsPage"
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource Primary}">

    <StackLayout Padding="15" Spacing="15">

        <!-- Search Bar -->
        <Grid ColumnSpacing="5" VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Frame Grid.Column="0" Style="{StaticResource SearchFrame}">
                <Entry x:Name="SearchEntry"
                       Style="{StaticResource SearchEntryStyle}"
                       Placeholder="Search for review" />
            </Frame>

            <Button Grid.Column="1"
                    Text="🔍"
                    BackgroundColor="Transparent"
                    WidthRequest="45"
                    HeightRequest="45"
                    FontSize="18"
                    HorizontalOptions="End"
                    VerticalOptions="Center" />
        </Grid>

        <!-- RefreshView opakowujący CollectionView -->
        <RefreshView x:Name="ReviewsRefreshView"
                     VerticalOptions="FillAndExpand"
                     Command="{Binding LoadItemsCommand}"
                     IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
            <CollectionView x:Name="ReviewsList"
                            ItemsSource="{Binding Items}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="15" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource Tile}">

                            <!-- TapGestureRecognizer -->
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    NumberOfTapsRequired="1"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ReviewsViewModel}}, Path=ItemTapped}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Review Icon / Photo -->
                                <Frame Grid.Column="0"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       CornerRadius="30"
                                       Padding="0"
                                       BackgroundColor="#E0E0E0"
                                       HasShadow="False">
                                    <Image Source="{Binding Icon}"
                                           WidthRequest="60"
                                           HeightRequest="60"
                                           Aspect="AspectFill" />
                                </Frame>

                                <!-- Review Details -->
                                <StackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                    <Label Text="{Binding EmployeeName}"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           TextColor="{StaticResource TextColor}" />
                                    <Label Text="{Binding ReviewDate, StringFormat='Date: {0:MM/dd/yyyy}'}"
                                           FontSize="13"
                                           TextColor="{StaticResource TextColor}" />
                                    <Label Text="{Binding ProductName, StringFormat='Product: {0}'}"
                                           FontSize="12"
                                           TextColor="{StaticResource TextColor}" />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Add Review Button
        
        <Button Text="＋ Add Review"
        FontSize="16"
        HeightRequest="50"
        VerticalOptions="End"
        Command="{Binding AddCommand}" />
        -->
        

    </StackLayout>
</ContentPage>
