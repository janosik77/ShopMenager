<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopMenager.Views.ReviewV.ReviewdetailView">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="15">

                <Label Text="Details"
                       FontSize="Large"
                       HorizontalOptions="Center" />

                <StackLayout Spacing="10">

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Review ID:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding ReviewID}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Rating:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding Rating}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Comments:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding Comments}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Review Date:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding ReviewDate}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Employee ID:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding EmployeeID}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Employee Name:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding EmployeeName}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Product ID:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding ProductID}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Product Name:"
                               FontAttributes="Bold"
                               WidthRequest="120"/>
                        <Label Text="{Binding ProductName}" />
                    </StackLayout>
                </StackLayout>

                <Button Text="Edit"
                        Command="{Binding EditCommand}"
                        CommandParameter="{Binding ReviewID}" />
                <Button Text="Delete"
                        Command="{Binding DeleteCommand}"
                        CommandParameter="{Binding ReviewID}" />
                <Button Text="Back to List"
                        Command="{Binding BackCommand}" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>