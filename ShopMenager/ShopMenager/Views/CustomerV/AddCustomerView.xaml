<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ShopMenager.Views.CustomerV.AddCustomerView"
    BackgroundColor="{StaticResource Primary}"
    Title="{Binding Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <StackLayout Padding="20" Spacing="15">
                <StackLayout Spacing="10" Margin="0,15">

                    <Label Text="First Name:" 
                           Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry Placeholder="Enter first name"
                               Text="{Binding FirstName}"
                               Style="{StaticResource SearchEntryStyle}"
                               />
                    </Frame>

                    <Label Text="Last Name:" 
                           Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry Placeholder="Enter last name"
                               Text="{Binding LastName}"
                               Style="{StaticResource SearchEntryStyle}"
                               />
                    </Frame>

                    <Label Text="Email:" 
                           Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry Placeholder="Enter email"
                               Text="{Binding Email}"
                               Keyboard="Email"
                               Style="{StaticResource SearchEntryStyle}"
                               />
                    </Frame>

                    <Label Text="Phone:" 
                           Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry Placeholder="Enter phone"
                               Text="{Binding Phone}"
                               Keyboard="Telephone"
                               Style="{StaticResource SearchEntryStyle}"
                               />
                    </Frame>

                    <Label Text="Address:" 
                           Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry Placeholder="Enter address"
                               Text="{Binding Address}"
                               Style="{StaticResource SearchEntryStyle}"
                               />
                    </Frame>

                    <Label Text="City:" 
                           Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry Placeholder="Enter city"
                               Text="{Binding City}"
                               Style="{StaticResource SearchEntryStyle}"
                               />
                    </Frame>

                    <Label Text="Photo Path:" 
                           Style="{StaticResource DetailLabel}" />
                    <Frame Style="{StaticResource SearchFrame}">
                        <Entry Placeholder="Enter photo path"
                               Text="{Binding PhotoPath}" 
                               Style="{StaticResource SearchEntryStyle}"
                               />
                    </Frame>
                </StackLayout>
            </StackLayout>
        </ScrollView>

        <StackLayout Grid.Row="1" Padding="20" Spacing="15">
            <Button Text="Create"
                    Command="{Binding SaveCommand}" />
            <Button Text="Back to List"
                    Command="{Binding CancelCommand}" />
        </StackLayout>
    </Grid>
</ContentPage>
