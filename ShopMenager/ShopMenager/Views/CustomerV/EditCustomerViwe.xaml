<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopMenager.Views.CustomerV.EditCustomerViwe"
             >
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="15">
                
                <Label Text="Edit" FontSize="Large" HorizontalOptions="Center"/>
                <Label Text="Customers" FontAttributes="Bold" HorizontalOptions="Center"/>


                <StackLayout Spacing="10">

                    <Label Text="First Name:"/>
                    <Entry Placeholder="Enter first name" Text="{Binding FirstName, Mode=TwoWay}" />

                    <Label Text="Last Name:"/>
                    <Entry Placeholder="Enter last name" Text="{Binding LastName, Mode=TwoWay}" />

                    <Label Text="Email:"/>
                    <Entry Placeholder="Enter email" Text="{Binding Email, Mode=TwoWay}" Keyboard="Email" />

                    <Label Text="Phone:"/>
                    <Entry Placeholder="Enter phone" Text="{Binding Phone, Mode=TwoWay}" Keyboard="Telephone" />

                    <Label Text="Address:"/>
                    <Entry Placeholder="Enter address" Text="{Binding Address, Mode=TwoWay}" />

                    <Label Text="City:"/>
                    <Entry Placeholder="Enter city" Text="{Binding City, Mode=TwoWay}" />

                    <Label Text="Photo Path:"/>
                    <Entry Placeholder="Enter photo path" Text="{Binding PhotoPath, Mode=TwoWay}" />
                </StackLayout>

                <Button Text="Save" Command="{Binding SaveCommand}" />

                <Button Text="Back to List" Command="{Binding BackCommand}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>