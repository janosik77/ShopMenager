<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"               
                x:Class="ShopMenager.Views.CustomerV.CustomersPage"
                xmlns:vm="clr-namespace:ShopMenager.ViewModels.CustomerVM"
                Title="{Binding Title}">

    <StackLayout Padding="15" Spacing="15" BackgroundColor="{StaticResource Primary}">

        <Grid ColumnSpacing="5" VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Frame Style="{StaticResource SearchFrame}">
                <Entry Style="{StaticResource SearchEntryStyle}" />
            </Frame>

            <Button Grid.Column="1"
                    Text="🔍"
                    BackgroundColor="Transparent"
                    WidthRequest="45"
                    HeightRequest="45"
                    FontSize="18"
                    HorizontalOptions="End"
                    VerticalOptions="Center" />
        </Grid>

        <RefreshView
            x:Name="CustomersRefreshView"
            VerticalOptions="FillAndExpand"
            Command="{Binding LoadItemsCommand}"
            IsRefreshing="{Binding IsBusy, Mode=TwoWay}">

            <CollectionView
                x:Name="CustomersList"
                ItemsSource="{Binding Items}"
                >
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate >
                    <DataTemplate>
                        <Frame Style="{StaticResource Tile}">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    NumberOfTapsRequired="1"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CustomersPageViewModel}}, Path=ItemTapped}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <Grid ColumnSpacing="10" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Frame Style="{StaticResource ImgFrame}">
                                    <Image Source="{Binding PhotoPath}"
                                           WidthRequest="60"
                                           HeightRequest="60"
                                           Aspect="AspectFill" />
                                </Frame>

                                <StackLayout  Grid.Column="1" VerticalOptions="Center" >
                                    <Label FontAttributes="Bold"
                                           FontSize="20"
                                           TextColor="{StaticResource TextColor}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding FirstName}" />
                                                <Span Text=" " />
                                                <Span Text="{Binding LastName}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Text="{Binding Phone, StringFormat='Phone: {0}!'}"
                                           FontSize="14"
                                           TextColor="{StaticResource TextColor}"  />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button Text="＋ Add Customer"             
                FontSize="16"
                HeightRequest="50"
                VerticalOptions="End"
                Command="{Binding AddCommand}" />

    </StackLayout>

</ContentPage>