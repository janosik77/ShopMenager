<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ShopMenager.Views.DiscountV.EditDiscountView"
    BackgroundColor="{StaticResource Primary}"
    Title="{Binding Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <StackLayout Padding="20" Spacing="15">

                <Label Text="Discount Name:" Style="{StaticResource DetailLabel}" />
                <Frame Style="{StaticResource SearchFrame}">
                    <Entry
                        Placeholder="Enter discount name"
                        Text="{Binding DiscountName, Mode=TwoWay}"
                        Style="{StaticResource SearchEntryStyle}" />
                </Frame>

                <Label Text="Discount Rate (%)" Style="{StaticResource DetailLabel}" />
                <Frame Style="{StaticResource SearchFrame}">
                    <Entry
                        Placeholder="Enter discount rate"
                        Keyboard="Numeric"
                        Text="{Binding DiscountRate, Mode=TwoWay}"
                        Style="{StaticResource SearchEntryStyle}" />
                </Frame>

                <Label Text="Start Date:" Style="{StaticResource DetailLabel}" />
                <Frame Style="{StaticResource SearchFrame}">
                    <DatePicker
                        Date="{Binding StartDate, Mode=TwoWay}"
                        HorizontalOptions="FillAndExpand" />
                </Frame>

                <Label Text="End Date:" Style="{StaticResource DetailLabel}" />
                <Frame Style="{StaticResource SearchFrame}">
                    <DatePicker
                        Date="{Binding EndDate, Mode=TwoWay}"
                        HorizontalOptions="FillAndExpand" />
                </Frame>

            </StackLayout>
        </ScrollView>

        <StackLayout Grid.Row="1" Padding="20" Spacing="10">
            <Button Text="Save" Command="{Binding SaveCommand}"/>
            <Button Text="Back to List" Command="{Binding CancelCommand}"/>
        </StackLayout>
    </Grid>
</ContentPage>
