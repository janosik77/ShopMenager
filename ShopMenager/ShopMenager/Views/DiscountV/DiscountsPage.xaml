<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopMenager.ViewModels.DiscountVM"
             x:Class="ShopMenager.Views.DiscountV.DiscountsPage"
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource Primary}">

    <StackLayout Padding="15" Spacing="15">

        <Grid ColumnSpacing="5" VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Frame Grid.Column="0" Style="{StaticResource SearchFrame}">
                <Entry x:Name="SearchEntry"
                       Style="{StaticResource SearchEntryStyle}"
                       Placeholder="Search for discount" />
            </Frame>

            <Button Grid.Column="1"
                    Text="🔍"
                    BackgroundColor="Transparent"
                    WidthRequest="45"
                    HeightRequest="45"
                    FontSize="18"
                    HorizontalOptions="End"
                    VerticalOptions="Center" />
        </Grid>

        <RefreshView x:Name="DiscountsRefreshView"
                     VerticalOptions="FillAndExpand"
                     Command="{Binding LoadItemsCommand}"
                     IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
            <CollectionView x:Name="DiscountsList"
                            ItemsSource="{Binding Items}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="15" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource Tile}">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    NumberOfTapsRequired="1"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DicountViewModel}}, Path=ItemTapped}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Opcjonalnie: Discount Icon 
                                <Image Source="{Binding Icon}"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       Aspect="AspectFill"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Start"
                                       Grid.Column="0"
                                       BackgroundColor="#E0E0E0" />
                                -->
                                
                                <StackLayout Grid.Column="1" VerticalOptions="Center">
                                    <Label Text="{Binding DiscountName}"
                                           FontSize="28"
                                           TextColor="{StaticResource SecondaryColor}" 
                                           FontAttributes="Bold"
                                           
                                           HorizontalOptions="Center"
                                           />
                                    <Label Text="{Binding DiscountRate, StringFormat=' {0}%'}"
                                           FontSize="18"
                                           TextColor="{StaticResource TextColor}" 
                                           HorizontalOptions="Center"
                                           FontAttributes="Bold"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button Text="＋ Add Discount"
                FontSize="16"
                HeightRequest="50"
                VerticalOptions="End"
                Command="{Binding AddCommand}" />

    </StackLayout>
</ContentPage>
