<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ShopMenager.Views.DiscountV.DiscountDetailView"
    BackgroundColor="{StaticResource Primary}"
    Title="{Binding Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <Frame BackgroundColor="{StaticResource Primary}"
                   Margin="15,0"
                   HasShadow="False"
                   CornerRadius="15">
                <StackLayout Padding="20" Spacing="15" VerticalOptions="Start">
                    <Label Text="{Binding DiscountName}"
                           Style="{StaticResource DetailLabel}"
                           TextColor="{StaticResource SecondaryColor}"
                           HorizontalOptions="Center"
                           VerticalOptions="Start"
                           Margin="0,20,0,50"
                           FontSize="32"/>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Discount ID:" 
                               Style="{StaticResource DetailLabel}"
                               HorizontalOptions="Start"
                               FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding DiscountID}" 
                               Style="{StaticResource DetailLabel}"
                               TextColor="{StaticResource DetailsTextColor}"
                               HorizontalOptions="End" />

                        <Label Grid.Row="1" Grid.Column="0"
                               Text="Rate:" 
                               Style="{StaticResource DetailLabel}"
                               HorizontalOptions="Start"
                               FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="1"
                               Text="{Binding DiscountRate, StringFormat='{0}%'}" 
                               Style="{StaticResource DetailLabel}"
                               TextColor="{StaticResource DetailsTextColor}"
                               HorizontalOptions="End" />

                        <Label Grid.Row="2" Grid.Column="0"
                               Text="Start Date:" 
                               Style="{StaticResource DetailLabel}"
                               HorizontalOptions="Start"
                               FontAttributes="Bold" />
                        <Label Grid.Row="2" Grid.Column="1"
                               Text="{Binding StartDate, StringFormat='{0:MM/dd/yyyy}'}" 
                               Style="{StaticResource DetailLabel}"
                               TextColor="{StaticResource DetailsTextColor}"
                               HorizontalOptions="End" />

                        <Label Grid.Row="3" Grid.Column="0"
                               Text="End Date:" 
                               Style="{StaticResource DetailLabel}"
                               HorizontalOptions="Start"
                               FontAttributes="Bold" />
                        <Label Grid.Row="3" Grid.Column="1"
                               Text="{Binding EndDate, StringFormat='{0:MM/dd/yyyy}'}" 
                               Style="{StaticResource DetailLabel}"
                               TextColor="{StaticResource DetailsTextColor}"
                               HorizontalOptions="End" />

                    </Grid>
                </StackLayout>
            </Frame>
        </ScrollView>

        <StackLayout Grid.Row="1" Padding="20" Spacing="15">
            <Button Text="Edit"
                    Command="{Binding EditCommand}"
                    CommandParameter="{Binding DiscountID}" />
            <Button Text="Delete"
                    Command="{Binding DeleteCommand}"
                    CommandParameter="{Binding DiscountID}" />
            <Button Text="Back to List"
                    Command="{Binding BackCommand}" />
        </StackLayout>
    </Grid>
</ContentPage>
